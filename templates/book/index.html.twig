{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PageCount</th>
                <th>Author</th>
                <th>IssueYear</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.pageCount }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.issueYear }}</td>
                <td>{{ book.price }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
    <a href="{{ path('book_author') }}">Books Ordered by Author</a>
    <a href="{{ path('book_new') }}">New Issues Only</a>
    <a href="{{ path('book_price') }}">Books Ordered by Price</a>
    <a href="{{ path('book_author') }}">Books Tabled by Author</a>
{% endblock %}
